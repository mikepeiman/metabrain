{
   "manifest_version": 3,
   "name": "Metabrain",
   "version": "0.1.0",
   "description": "Metabrain browser integration extension",
   "offline_enabled": true,
   "icons": {
      "16": "img/favicon.png",
      "32": "img/32x32.png",
      "128": "img/128x128.png"
   },
   "background": {
      "service_worker": "service_worker.js",
      "type": "module"
   },
   "action": {
      "default_icon": "img/icon.png",
      "default_title": "Metabrain",
      "default_popup": "popup.html"
   },
   "host_permissions": ["<all_urls>"],
   "permissions": [
      "storage",
      "tabs",
      "tabGroups",
      "sessions",
      "search",
      "topSites",
      "desktopCapture",
      "downloads",
      "contextMenus",
      "clipboardRead",
      "clipboardWrite",
      "bookmarks",
      "unlimitedStorage",
      "identity",
      "favicon",
      "nativeMessaging",
      "notifications",
      "activeTab",
      "webNavigation"
   ]
}